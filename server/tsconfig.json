{
    "compilerOptions": {
        "rootDirs": ["src"],
        "outDir": "dist",
        "lib": ["es2020"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "esm": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
