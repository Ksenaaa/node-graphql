{
    "compilerOptions": {
        "rootDirs": ["src"],
        "outDir": "dist",
        "lib": ["es2020"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "types": ["node"]
    },
    "ts-node": { "esm": true },
    "include": ["src"],
    "exclude": ["node_modules"]
}
